{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "name": "flatris",
  "license": "MIT",
  "description": "A fast-paced two-player web game",
  "repository": {
    "type": "git",
    "url": "https://github.com/skidding/flatris.git"
  },
  "scripts": {
    "lint": "eslint '**/*.js' '!**/.next/**'",
    "format": "prettier --write '**/*.{js,css}' '!**/{flow-typed,.next}/**'",
    "test": "flow && yarn lint && jest --maxWorkers=4",
    "test:watch": "jest --watch",
    "cosmos": "cosmos --config packages/web/cosmos.config.js",
    "cosmos:export": "cosmos-export --config packages/web/cosmos.config.js",
    "dev:client": "babel-node packages/server/start-dev-client.js",
    "dev:server": "babel-node packages/server/start-dev-server.js",
    "dev:server:watch": "nodemon packages/server/start-dev-server.js  --exec babel-node",
    "build": "next build packages/web",
    "start": "babel-node packages/server/start-prod.js"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "23.0.0",
    "babel-loader": "^7.1.4",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-flowtype": "^2.47.1",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.15.2",
    "eslint-plugin-react": "^7.8.2",
    "flow-bin": "^0.73.0",
    "flow-typed": "^2.4.0",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "23.0.0",
    "nodemon": "^1.17.5",
    "prettier": "^1.12.1",
    "react-cosmos": "^4.4.0",
    "react-cosmos-fetch-proxy": "^4.4.0",
    "react-cosmos-redux-proxy": "^4.4.0",
    "react-cosmos-telescope": "^4.4.0",
    "react-test-renderer": "^16.4.0",
    "redux-devtools-extension": "^2.13.2",
    "style-loader": "^0.21.0"
  }
}
